{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
      }
    },

    {
      "name": "mingw-ninja-debug",
      "displayName": "MinGW g++ + Ninja (Debug)",
      "inherits": "base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-mingw-ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "x64-mingw-static",
        "CMAKE_C_COMPILER": "C:/MinGW/bin/gcc.exe",
        "CMAKE_CXX_COMPILER": "C:/MinGW/bin/g++.exe"
      }
    },

    {
      "name": "msvc-vs-debug",
      "displayName": "MSVC + Visual Studio 2022 (Debug)",
      "inherits": "base",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build-vs",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      },
      "architecture": {
        "value": "x64"
      }
    },

    {
      "name": "msvc-ninja-debug",
      "displayName": "MSVC + Ninja (Debug)",
      "inherits": "base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-msvc-ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "mingw-ninja-debug",
      "configurePreset": "mingw-ninja-debug"
    },
    {
      "name": "msvc-vs-debug",
      "configurePreset": "msvc-vs-debug",
      "configuration": "Debug"
    },
    {
      "name": "msvc-ninja-debug",
      "configurePreset": "msvc-ninja-debug"
    }
  ]
}